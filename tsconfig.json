{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "noErrorTruncation": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "actions/*": ["actions/*"],
      "app-constants/*": ["app-constants/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "interfaces/*": ["interfaces/*"],
      "reducers/*": ["reducers/*"],
      "store/*": ["store/*"],
      "theme/*": ["theme/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
